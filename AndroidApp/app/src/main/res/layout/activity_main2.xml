<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constaint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:backgroundTint="#454545"
    android:layerType="none"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="3"
        app:iconTint="#754949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button13"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="4"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button15"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="6"
        android:textSize="14sp"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button16"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="7"
        android:textSize="14sp"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button17"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="8"
        android:textSize="14sp"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button14"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="5"
        android:textSize="14sp"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <ImageView
        android:id="@+id/notification_background"
        android:layout_width="422dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit"
        app:srcCompat="@android:drawable/divider_horizontal_textfield" />

    <Button
        android:id="@+id/button8"
        android:layout_width="137dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#504E4E"
        android:onClick="onClick"
        android:text="Manual"
        app:iconTint="#754949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notification_background" />

    <Button
        android:id="@+id/button3"
        android:layout_width="137dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#504E4E"
        android:onClick="onClick"
        android:text="Program"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/notification_background" />

    <ImageView
        android:id="@+id/statusIMG"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="false"
        android:onClick="onClick"
        android:src="@android:drawable/stat_sys_data_bluetooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/adressBT"
        android:layout_width="136dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="84:CC:A8:5E:70:F2"
        android:textColor="#4CAF50"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/statusIMG"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Edit"
        android:layout_width="21dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintEnd_toStartOf="@+id/adressBT"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="373dp"
        android:layout_height="397dp"
        android:layout_marginTop="156dp"
        android:background="#605F5F"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:foregroundGravity="fill_horizontal|top"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="T100;T100;T100;T100;T100;T100;T100;T100;T100;T100;"
        android:textAlignment="textStart"
        android:textColor="#6CBC34"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/buttonR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#6A6868"
        android:onClick="onClick"
        android:text="Send"
        app:iconTint="#754949"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#6A6868"
        android:onClick="onClick"
        android:text="SAVE"
        android:visibility="invisible"
        app:iconTint="#754949"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />



    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="▲"
        app:iconTint="#754949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="▼"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="◄"
        android:textSize="20sp"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="►"
        android:textSize="20sp"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="1"
        android:textSize="14sp"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <Button
        android:id="@+id/button11"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6A6868"
        android:onClick="funcButton"
        android:text="2"
        android:textSize="14sp"
        app:iconTint="#754949"
        app:layout_constraintStart_toEndOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/notification_background" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="editMode"
        android:text="Edit Mode"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>